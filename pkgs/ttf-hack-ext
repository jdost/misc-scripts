_pkgver_major=1
_pkgver_minor=1
_pkgver_patch=0

pkgname="ttf-hack-ext"
pkgver=${_pkgver_major}.${_pkgver_minor}.${_pkgver_patch}
pkgrel=2
pkgdesc='Extended version of the ttf-hack font with additional glyphs'
arch=('any')
license=()
url="https://github.com/ryanoasis/nerd-fonts"
depends=('fontconfig' 'xorg-font-utils')
provides=('ttf-hack')
source=("https://github.com/ryanoasis/nerd-fonts/releases/download/v${pkgver}/Hack.zip")
sha256sums=('ceebc8767d79b774b631c56fec1082b008310b0c6e5bb4b8e8826027ec6db882')

package() {
   install -d "$pkgdir/usr/share/fonts/TTF/"
   install -m644 "$srcdir/Knack Regular Nerd Font Complete Mono.ttf" "$pkgdir/usr/share/fonts/TTF/Hack Mono.ttf"
   install -m644 "$srcdir/Knack Bold Nerd Font Complete Mono.ttf" "$pkgdir/usr/share/fonts/TTF/Hack Bold Mono.ttf"
   install -m644 "$srcdir/Knack Italic Nerd Font Complete Mono.ttf" "$pkgdir/usr/share/fonts/TTF/Hack Italic Mono.ttf"
   install -m644 "$srcdir/Knack Bold Italic Nerd Font Complete Mono.ttf" "$pkgdir/usr/share/fonts/TTF/Hack Italic Bold Mono.ttf"
}
